<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SMySubmissionActivity"
    android:background="@color/white"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?attr/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp">


            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submitted Assignment"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="18sp"
                />


            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                />




        </RelativeLayout>




    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/white"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/courseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Database Management System"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                >




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sub Date: "
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />


                    <TextView
                        android:id="@+id/submitDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02-04-2025"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sub Time: "
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />


                    <TextView
                        android:id="@+id/submitTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2:56 PM"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Obtained Mark: "
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />


                    <TextView
                        android:id="@+id/obtainedMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FeedBack: "
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />


                    <TextView
                        android:id="@+id/feedBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 ads adsf asdf asdf adsf adf asdf adf adf adsf adsf adf adsf asdf asdf asdf asdf asdf asdf adsf asd fad sfasd f asdf adsf adsf adsf adsf adsf "
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:lineSpacingExtra="4dp"
                        android:padding="8dp"
                        android:justificationMode="inter_word"
                        />


                </LinearLayout>












            </LinearLayout>


            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assignment Details"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    />

                <ImageView
                    android:id="@+id/expandIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_dropdown"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/assignmentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deadline: "
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02-06-2025"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title: "
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />


                    <TextView
                        android:id="@+id/assignmentTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Question solve of mid question"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Mark: "
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />


                    <TextView
                        android:id="@+id/mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description: "
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />


                    <TextView
                        android:id="@+id/des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdf adsf asdf sd adsf adsf adsf adsf asdf ads fasdf asd fasdf adsf ads fads fasdf adsf dsf adsf adsf ad sfa dsfa dsf adsf df a sdf adf ad asd fad sfa dsfa df adsf ad fad sfa dsf adsf adsf adsf ads fa df asdf adsf a dsf adsf ads fa dsf adsf  sdf adsf ad sf adsf ad sf ad a sdf adsf ad sf adsf ads fa df ad sf ads f adsf a dsf asd f asdf a dsf asd f adf a df a dsf adsf  adsf a dsf ad fa df a df ad fa sdf a df a ds ad f ad sf adf a dsf a df ad f adf  adf a ds fa df ad f ads fa df a df ad s ads fa df a ds fa dsf ads f adsf a ds fad f ads fa df a df a df ad f ad f ad fa dsf a d faf g fb fd vadf  sdf a fvgfadf ds fa dsf a fg ag a fg ad f ar f ad f ad g a ga fg a df a df ad g a ga d gadg"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:lineSpacingExtra="4dp"
                        android:padding="8dp"
                        android:justificationMode="inter_word"
                        />


                    <RelativeLayout
                        android:id="@+id/aaaa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        >

                        <TextView
                            android:id="@+id/pdfFileName"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/spinner_background2"
                            android:paddingLeft="10dp"
                            android:text="Select File"
                            android:textColor="#2D3135"
                            android:textSize="17sp"
                            android:gravity="center_vertical"
                            />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_file2"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="12dp"
                            />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/showFile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show File"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="3dp"
                            />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="500dp"
                        >
                        <TextView
                            android:id="@+id/update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Update"
                            app:cornerRadius="10dp"
                            android:background="@drawable/button_background2"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/buttonDark"
                            android:paddingVertical="13dp"
                            android:paddingHorizontal="25dp"
                            />
                    </RelativeLayout>









                </LinearLayout>




            </LinearLayout>












        </LinearLayout>


    </ScrollView>




</RelativeLayout>
